<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerfilActivity"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iconoImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_iconoperfil"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/nombreUsuarioTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nombreUsuario"
                android:layout_marginStart="5dp"/>

            <TextView
                android:id="@+id/correoUsuarioTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="correoUsuario"
                android:layout_marginStart="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/jugadasTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jugadas: ??"
                    android:layout_marginStart="5dp"/>

                <TextView
                    android:id="@+id/ganadasTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ganadas: ??"
                    android:layout_marginStart="5dp"/>

                <TextView
                    android:id="@+id/puntosTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Puntos: ???"
                    android:layout_marginStart="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HISTORIAL"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/noHayDatosTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="No hay datos todavÃ­a"
        android:layout_marginTop="25dp"/>

    <ListView
        android:id="@+id/historialListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </ListView>
</LinearLayout>