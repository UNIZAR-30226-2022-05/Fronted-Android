<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/notificacionesAmigosTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notificaciones de amigos"
        android:textAlignment="center"/>

    <ListView
        android:id="@+id/notificacionesAmigosListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/notificacionesSalaTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notificaciones de sala"
        android:textAlignment="center"
        android:layout_marginTop="25dp"/>

    <ListView
        android:id="@+id/notificacionesSalaListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/noHayNotificacionesPendientesTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No tienes notificaciones pendientes"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_marginTop="25dp"
        android:visibility="gone"/>
</LinearLayout>
